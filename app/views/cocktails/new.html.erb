<h1>New Cocktail</h1>

  <%= simple_form_for @cocktail do |f| %>
    <%= f.input :name %>
    <%= f.submit class: 'btn btn-primary' %>

  <% simple_form_for @cocktail do |f| %>
    <% if @cocktail.errors.any? %>
    <ul>
      <% @cocktail.errors.full_messages.each do |message| %>
       <li> <%= message %> </li>
      <% end %>
    </ul>
    <% end %>
  <% end %>
<% raise %>
   <%= link_to cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: 'Are you sure?' } do %>
      <i class="fa fa-minus red-minus"></i>
    <% end %>

<hr>
<%= link_to cocktails_path do %>
  <i class="fa fa-history"></i> Back to list
<% end %>
