<h1>This is the Cocktail</h1>

<div class="container">
  <p><%=  @cocktail.name %></p>


  <ul>
  <% @cocktail.doses.each do |dose| %>
  <li><%=dose.ingredient.name %>  :  <%= dose.description %>
      <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fa fa-trash destroy_dose"></i>
      <% end %>
   </li>
  <% end %>
  </ul>


  <%= link_to("create new dose", new_cocktail_dose_path(@cocktail) ) %>
  <%= link_to cocktails_path do %>
    <i class="fa fa-history"></i> Back to list
  <% end %>
</div>
