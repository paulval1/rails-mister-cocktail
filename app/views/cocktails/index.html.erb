<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%=asset_path "fruit.jpg"%>);">
  <div class="container">
    <h1 class="banner-main-text">Cocktail Repository</h1>
  </div>
</div>


<h1 style="text-decoration-line: underline;">Cocktails</h1>


<%= link_to "Add a new Cocktail", new_cocktail_path, class: 'btn btn-primary' %>

<div class="cards">
  <% @cocktails.each do |cocktail| %>

  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
    <h3> <%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
  </div>

   <% end %>
</div>




